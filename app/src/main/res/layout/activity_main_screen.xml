<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#800000">

    <Button
        android:id="@+id/button_ring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="266dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#AA0000"
        android:text="RING"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button_taxi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_ring"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#AA0000"
        android:text="TAXI"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button_hitchhiking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_taxi"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#AA0000"
        android:text="HITCHHIKING"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_hitchhiking"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#AA0000"
        android:text="PROFÄ°LE"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="20dp"
        android:background="#AA0000"
        android:text="LEADERBOARD"
        android:textColor="#FFFFFF" />


</RelativeLayout>
