<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserTaxiFragment" >

    <TextView
        android:id="@+id/endCodeUserTaxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="EndCode"
        android:visibility="gone"
        android:fontFamily="@font/rockwell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/UserInfoUserTaxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text=" user info "
        android:fontFamily="@font/rockwell"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endCodeUserTaxi" />

    <EditText
        android:id="@+id/userTaxiEndCodeEditTExt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter EndCode"
        android:visibility="gone"
        android:fontFamily="@font/rockwell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserInfoUserTaxi" />

    <Button
        android:id="@+id/userTaxiConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" CONFIRM "
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/coral_candy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/userTaxiDecline" />

    <Button
        android:id="@+id/userTaxiDecline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Decline "
        android:textSize="20sp"
        android:fontFamily="@font/coral_candy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>