<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserHitchikerFragment">


    <TextView
        android:id="@+id/endCodeUserHitchiker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="EndCode"
        android:fontFamily="@font/rockwell"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/UserInfoUserHitchiker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text=" user info "
        android:fontFamily="@font/rockwell"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endCodeUserHitchiker" />

    <EditText
        android:id="@+id/userHitcihkerEndCodeEditTExt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Enter End Code"
        android:fontFamily="@font/rockwell"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserInfoUserHitchiker" />

    <Button
        android:id="@+id/userHitchikerConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" CONFIRM "
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/coral_candy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/userHitchikerDecline" />

    <Button
        android:id="@+id/userHitchikerDecline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Decline "
        android:textSize="20sp"
        android:fontFamily="@font/coral_candy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp" /> />

</androidx.constraintlayout.widget.ConstraintLayout>
